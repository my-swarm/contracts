{
  "name": "swarm-compliant-contract",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "test": "hardhat test",
    "compile": "hardhat compile && node ./scripts/distribute-abis.js",
    "fundraise": "hardhat test ./test/fundraising/ContributeFundsLocal.js",
    "deploy:base": "hardhat run scripts/deploy-base.js --show-stack-traces --network",
    "deploy:issuance": "yarn compile && hardhat run scripts/deploy-issuance.js --show-stack-traces --network",
    "dev:base": "concurrently \"hardhat node --hostname 0.0.0.0\" \"(sleep 2 && yarn deploy:base localhost)\"",
    "dev:issuance": "concurrently \"hardhat node --hostname 0.0.0.0\" \"(sleep 2 && yarn deploy:issuance localhost)\"",
    "lint": "solhint -f table contracts/*.sol contracts/**/*.sol",
    "lint:fix": "prettier --write contracts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.8",
    "ganache-time-traveler": "^1.0.15",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.58",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "hardhat": "^2.0.11",
    "json-format": "^1.0.1"
  }
}
